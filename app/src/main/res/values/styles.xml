<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarAndNoTitle" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.WhiteTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="sniperTextField">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/lynchgray</item>
        <item name="android:textColor">@color/pictonBlue</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="shadowText">
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/lynchgray</item>
    </style>

    <style name="defaultbackground">
        <item name="android:background">#dae6e1</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
